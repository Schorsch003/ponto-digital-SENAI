@{
    ViewData["TituloPag"] = "SAC";
}

<h2>SAC</h2>
        <div class="conteudo_sac">

            <section class="titulos">
                <h3>Possui alguma reclamação?</h3>
                <h3>Informe-nos!</h3>
            </section>
            <section class="reclamacao">
                <form action="" method="post">
                    <input type="text" id="nome" placeholder="Nome">
                    <br>
                    <input type="text" name="assunto" id="assunto" placeholder="Asssunto">
                    <br>
                    <textarea name="area_text" id="area_texto" cols="400" rows="30" style="resize:none"></textarea>
                    <br>
                    <div id="imagens_btn">
                        <button id="send"><img src="img/anexar.png" alt=""></button>
                        <button id="send"><img src="img/enviar_sac.png" alt=""></button>
                    </div>
                </form>
            </section>
        </div>
